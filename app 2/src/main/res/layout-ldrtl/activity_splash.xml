<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash"
    tools:context="me.arifix.quizix.com.arifix.quizix.SplashActivity"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/appTitle"
        fontPath="fonts/OpenSans-Bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:configChanges="locale"/>

    <TextView
        android:id="@+id/appSubtitle"
        fontPath="fonts/OpenSans-Regular.ttf"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:text="@string/app_tagline"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        android:configChanges="locale"/>

    <Button
        android:id="@+id/btnLetsStart"
        fontPath="fonts/OpenSans-Regular.ttf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_purple"
        android:text="@string/lets_start"
        android:textColor="@color/colorWhite"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnHowTo"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:id="@+id/btnHowTo"
        fontPath="fonts/OpenSans-Regular.ttf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_blue"
        android:text="@string/how_to"
        android:textColor="@color/colorWhite"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnLetsStart"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_weight="1" />

</android.support.constraint.ConstraintLayout>
